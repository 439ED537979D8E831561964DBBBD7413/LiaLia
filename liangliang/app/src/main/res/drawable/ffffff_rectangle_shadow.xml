<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">




    <!-- bottom shadow -->
    <item >
        <shape android:shape="rectangle">


            <corners android:radius="5dp" />
            <gradient

            android:centerColor="#20b2b2b2"
            android:endColor="#20b2b2b2"
            android:startColor="#20b2b2b2" />
        </shape>
    </item>



    <!--兼容android 3.0以下的写法-->
    <item
          android:bottom="1dp"
          android:right="1dp"

        >
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="3dp" />

            <!-- 外框，框線粗細，框線顏色 -->
            <stroke
                android:width="3dip"
                android:color="#ffffff" />
        </shape>
    </item>


</layer-list>
