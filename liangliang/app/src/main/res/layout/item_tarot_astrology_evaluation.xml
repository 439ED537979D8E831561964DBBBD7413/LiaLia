<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >

        <ImageView

            android:id="@+id/item_tarot_astrology_evalution_iv_user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/item_tarot_astrology_evalution_iv_user_icon"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/item_tarot_astrology_evalution_tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="12sp"

                    />

                <TextView
                    android:id="@+id/item_tarot_astrology_evalution_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="12sp"

                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_tarot_astrology_evalution_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/color_666666"
                android:textSize="16sp"

                />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:id="@+id/item_tarot_astrology_evalution_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"></View>

</LinearLayout>
