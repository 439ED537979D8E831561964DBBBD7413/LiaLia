<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gift_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/activity_ite_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dip">

    <RelativeLayout
        android:id="@+id/gift_dialog_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/dialog_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/remind_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_iv"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="解锁需1把钥匙"
            android:textColor="@color/color_666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/remind_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remind_name_tv"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="解锁需1把钥匙"
            android:textColor="@color/color_b2b2b2"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sure_btn"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/gift_dialog_redbtn"
                android:gravity="center"
                android:text="立即使用"
                android:textColor="@color/color_ffffff" />

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/sure_btn"
                android:layout_weight="1"
                android:background="@drawable/gift_dialog_strokebtn"
                android:gravity="center"
                android:text="取消使用"
                android:textColor="@color/color_ff7462" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>