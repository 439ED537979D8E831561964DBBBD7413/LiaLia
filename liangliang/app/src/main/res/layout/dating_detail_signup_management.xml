<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="以下信息仅自己可见"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:textColor="@color/color_9a9a9a"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_white_rectangle_five_corners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="感兴趣的人数"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/color_333333"
                />


            <TextView
                android:id="@+id/dating_detail_signup_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:textColor="@color/color_b2b2b2"
                />


        </LinearLayout>

        <cn.chono.yopper.view.MiListView
            android:id="@+id/dating_detail_signup_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>


</LinearLayout>