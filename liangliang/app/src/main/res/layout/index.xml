<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_f8f7f5">

    <LinearLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_tab_container_layout"
        android:gravity="center"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_tab_container_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/eeeeee_1dp_top_stroke_white_bg"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/find_layout_indexActivity"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_find_narmal_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_find_click" />

            <TextView
                android:id="@+id/icon_find_narmal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_str"
                android:textColor="@color/color_tab_style"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nearby_layout_indexActivity"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_nearby_narmal_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_nearby_click" />

            <TextView
                android:id="@+id/icon_nearby_narmal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="俩俩"
                android:textColor="@color/color_tab_style"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/kingdom_layout_indexActivity"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_kingdom_click"/>


            <TextView
                android:id="@+id/icon_kingdom_narmal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/kingdo_str"
                android:textColor="@color/color_tab_style"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/activity_layout_indexActivity"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_activity_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_activity_click" />

            <TextView
                android:id="@+id/icon_activity_narmal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动"
                android:textColor="@color/color_tab_style"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/usercenter_layout_indexActivity"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <ImageView
                    android:id="@+id/icon_usercenter_narmal_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_usercenter_click" />


                <ImageView
                    android:id="@+id/icon_look_me_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="-2dp"
                    android:layout_toRightOf="@+id/icon_usercenter_narmal_icon"
                    android:background="@drawable/bg_bubble"
                    android:gravity="center"
                    android:visibility="visible" />


            </RelativeLayout>


            <TextView
                android:id="@+id/icon_usercenter_narmal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_usercenter_narmal_icon"
                android:layout_centerHorizontal="true"
                android:text="@string/usercenter_str"
                android:textColor="@color/color_tab_style"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>