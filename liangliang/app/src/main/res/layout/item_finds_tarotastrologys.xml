<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/border_top_bottom"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/itemFindsTarot_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemFindsTarot_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/color_ff7462"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/itemFindsTarot_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/color_b2b2b2"
                android:textSize="12sp" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_f8f8f7"></View>


        <LinearLayout
            android:id="@+id/itemFindsLuck_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:id="@+id/itemFindsLuck_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/color_ff7462"
                android:textSize="15sp" />


            <TextView

                android:id="@+id/itemFindsLuck_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="22"
                android:textColor="@color/color_b2b2b2"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <ImageView

                android:id="@+id/itemFindsLuck_iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"


                />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/color_f8f8f7"
            android:visibility="invisible"></View>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/color_f8f8f7"></View>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/itemFindsTarot_iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_f8f8f7"></View>

        <LinearLayout

            android:id="@+id/itemFindsAstrologys_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemFindsAstrologys_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_ff7462"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/itemFindsAstrologys_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_b2b2b2"
                android:textSize="12sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/itemFindsAstrologys_iv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f8f8f7"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"


        >

        <TextView
            android:id="@+id/itemFindsTarot_tv_tarot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"

            android:layout_marginTop="8dp"
            android:layout_weight="1"

            android:gravity="center"
            android:text="测塔罗"
            android:textColor="@color/color_666666"
            android:textSize="15sp"


            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_f8f8f7"></View>


        <TextView
            android:id="@+id/itemFindsTarot_tv_astrologys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绘星盘"
            android:textColor="@color/color_666666"
            android:textSize="15sp"

            />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_f8f8f7"></View>


        <LinearLayout
            android:id="@+id/itemFindsStores_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:id="@+id/itemFindsStores_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"

                android:textColor="@color/color_ff7462"
                android:textSize="15sp"

                />


            <TextView
                android:id="@+id/itemFindsStores_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:textColor="@color/color_b2b2b2"
                android:textSize="12sp"

                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1">

            <ImageView
                android:id="@+id/itemFindsStores_iv_icon"

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>





