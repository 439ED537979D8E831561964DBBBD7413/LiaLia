<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/one_tab_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_height"
        android:layout_weight="1.0"
        android:padding="2dp">

        <TextView
            android:id="@+id/tab_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我喜欢"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon_look_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:layout_alignTop="@id/tab_text_1"
            android:layout_toRightOf="@+id/tab_text_1"
            android:background="@drawable/bg_bubble"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two_tab_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_height"
        android:layout_weight="1.0"
        android:padding="2dp">

        <TextView
            android:id="@+id/tab_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="喜欢我"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon_look_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:layout_alignTop="@id/tab_text_2"
            android:layout_toRightOf="@+id/tab_text_2"
            android:background="@drawable/bg_bubble"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three_tab_tv"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_height"
        android:layout_weight="1.0"
        android:padding="2dp">

        <TextView
            android:id="@+id/tab_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="互相喜欢"
            android:textColor="#333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/icon_look_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-3dp"
            android:layout_alignTop="@id/tab_text_3"
            android:layout_toRightOf="@+id/tab_text_3"
            android:background="@drawable/bg_bubble"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>