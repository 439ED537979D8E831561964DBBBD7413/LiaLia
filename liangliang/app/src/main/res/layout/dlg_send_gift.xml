<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dip">


    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/send_gift_icon_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />


        <TextView
            android:id="@+id/send_gift_name_tv"
            android:layout_width="262dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_666666"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/send_gift_applecount_tv"
            android:layout_width="262dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_b2b2b2"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="34dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/send_gift_sure_tv"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_ff7462_corners_5px"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="16dip" />


        <TextView
            android:id="@+id/send_gift_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_bg_ffffff_storke_ff7462_corners_5px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_ff7462"
            android:textSize="16dip" />

    </LinearLayout>

</LinearLayout>