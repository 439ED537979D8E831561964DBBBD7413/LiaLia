<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dating_list_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp">

    <LinearLayout
        android:id="@+id/dating_list_item_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_bg_10_corners"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/dating_list_item_userImg_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/message_head_default_icon" />

                    <ImageView
                        android:id="@+id/dating_list_item_vip_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_small_vip_diamond" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/dating_list_item_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="yopper"
                    android:textColor="@color/color_545159"
                    android:textSize="10sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/dating_list_item_age_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/dating_list_item_hot_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/hot_icon" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/dating_list_item_video_lable_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/video_icon" />

                    <ImageView
                        android:id="@+id/dating_list_item_activity_talent_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:src="@drawable/ic_activity_talent" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/dating_list_item_type_iv"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:id="@+id/dating_list_item_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="50dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/dating_list_item_address_iv"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:background="@drawable/appoint_item_address_icon" />

                            <TextView
                                android:id="@+id/dating_list_item_address_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/color_9a9a9a"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/dating_list_item_time_iv"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:background="@drawable/appoint_item_time_icon" />

                            <TextView
                                android:id="@+id/dating_list_item_time_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/color_9a9a9a"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/dating_list_item_content_iv"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:background="@drawable/white_bg_ff_circle" />

                            <TextView
                                android:id="@+id/dating_list_item_content_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:textColor="@color/color_9a9a9a"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/dating_list_item_image_iv"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentRight="true" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/dating_list_item_dash_shapa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/dating_list_item_publish_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/dating_list_item_distance_view"
                android:textColor="@color/color_b2b2b2"
                android:textSize="11sp" />

            <View
                android:id="@+id/dating_list_item_distance_view"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/dating_list_item_distance_tv"
                android:background="@color/color_b2b2b2" />

            <TextView
                android:id="@+id/dating_list_item_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_b2b2b2"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:background="@drawable/white_cicle_bg"
        android:gravity="center">

        <cn.chono.yopper.view.ProgressBarView
            android:id="@+id/dating_list_item_all_pbv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:inside_round_color="#ff735d"
            app:inside_round_moment_from="4dp"
            app:layout_auto_baseheight="width"
            app:outside_round_color="#ffd3cc"
            app:outside_round_progress_color="#ff735d"
            app:outside_round_width="2dp"
            app:promptTextColor="#ffffff"
            app:promptTextSize="7sp"
            app:prompt_text_moment_from="4dp"
            app:textColor="#ffffff"
            app:textSize="12sp">

        </cn.chono.yopper.view.ProgressBarView>

    </LinearLayout>


</RelativeLayout>