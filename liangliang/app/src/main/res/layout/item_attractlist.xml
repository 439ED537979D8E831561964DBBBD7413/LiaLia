<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:minHeight="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <!--<View-->
                <!--android:layout_width="2dp"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/shape_rectangle_bg_ffffff_stroke_eeeeee" />-->

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_oval_bg_ff7462" />

            <View
                android:id="@+id/item_charm_gift_top_line"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/shape_rectangle_bg_ffffff_stroke_eeeeee" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="你的魅力值"
            android:textColor="@color/color_ff7462"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_charm_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="+7"
            android:textColor="@color/color_ff7462"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_charm_gift_receive_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="2016-05-29 11:20:45"
            android:textColor="@color/color_b2b2b2"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/item_charm_gift_bottom_line"
            android:layout_width="6dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_rectangle_bg_ffffff_stroke_eeeeee" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/attrack_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_charm_usericon_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/message_head_default_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="50dp">

                    <TextView
                        android:id="@+id/item_charm_username_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="name"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/item_charm_sex_age_horsecope_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/item_charm_username_tv"
                        android:drawablePadding="3dp"
                        android:text="horsecope"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/item_charm_gift_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="30dp"
                        android:text="giftname"
                        android:textColor="@color/color_ffffff"
                        android:textSize="12sp" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="送您"
                    android:textColor="@color/color_ffffff"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:background="@color/color_ffffff" />

                <ImageView
                    android:id="@+id/item_charm_gift_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>