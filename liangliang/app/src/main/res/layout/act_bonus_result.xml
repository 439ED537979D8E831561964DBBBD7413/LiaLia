<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/error_bonus_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="216dp"
            android:layout_height="216dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/prize_bg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/result_prize_bg" />

            <ImageView
                android:id="@+id/bonus_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_error_no_data" />
        </RelativeLayout>

        <TextView
            android:id="@+id/alert_success_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="恭喜你"
            android:textColor="@color/color_ff7462"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/error_bonus_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/color_9a9a9a"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/prize_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text=""
                android:textColor="@color/color_ff7462"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_bonus_alert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp">

        <Button
            android:id="@+id/repety_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_bg"
            android:text="重新领取"
            android:textColor="@color/color_ff7462"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/success_btn"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/address_manager_btn_bg"
            android:text="分享给朋友"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/success_bonus_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="我们的工作人员会在一个工作日之内联系您根据工作人员的指引完成领奖分享后，奖品会寄送到您提供的地址，请耐心等待"
        android:textColor="@color/color_b2b2b2"
        android:textSize="10sp"
        android:visibility="gone" />
</RelativeLayout>
