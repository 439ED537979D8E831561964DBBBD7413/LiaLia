<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="22dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:layout_marginTop="22dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_renewals_vip_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_renewals_vip_tv_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vip_current_status"
            android:textColor="@color/color_666666"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_renewals_vip_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:textColor="@color/color_ff7462"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_renewals_vip_tv_status_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vip_renewals_vip_the_way"
            android:textColor="@color/color_666666"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_renewals_vip_tv_status_nint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_renewals_vip_ll"
        android:gravity="center"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="15dp"
        android:text="@string/no_vip_opened_vip_privilege"
        android:textColor="@color/color_666666"
        android:visibility="gone"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_renewals_vip_account_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:text="@string/account_apple_number_hint"
            android:textColor="@color/color_666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_renewals_vip_tv_more_apple_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/item_renewals_vip_account_hint"
            android:text=""
            android:textColor="@color/color_ff7462"
            android:textSize="14sp"/>

        <TextView

            android:id="@+id/item_renewals_vip_tv_obtain_more_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginTop="15dp"
            android:text="@string/obtain_more_apple"
            android:textColor="@color/color_157efb"
            android:textSize="14sp"/>

    </RelativeLayout>


</LinearLayout>