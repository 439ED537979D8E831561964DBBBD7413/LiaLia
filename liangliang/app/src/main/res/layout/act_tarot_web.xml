<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/color_ffffff"
    android:gravity="top|center"

    >

    <cn.chono.yopper.view.WebView.PragressWebView
        android:id="@+id/tarotWeb_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:scrollbars="none" />

    <ViewStub
        android:id="@+id/tarotWeb_vs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/error_network_layout" />

    <ViewStub
        android:id="@+id/tarotWeb_localhost_vs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/web_localhost_tv" />


    <LinearLayout

        android:id="@+id/tarotWeb_ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_bf201b2e"

        android:visibility="gone"


        >

        <Button
            android:id="@+id/tarotWeb_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ae7ed7_border_corners"
            android:text="@string/tarot_astrology_str"
            android:textSize="16sp" />


    </LinearLayout>


</FrameLayout>