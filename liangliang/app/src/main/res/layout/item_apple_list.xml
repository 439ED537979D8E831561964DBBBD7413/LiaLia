<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:orientation="vertical"


    >


    <ImageView
        android:id="@+id/item_apple_list_iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="12dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_apple_list_iv_icon"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                >


                <TextView
                    android:id="@+id/item_apple_list_tv_apple_number"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="2222"
                    android:textColor="@color/color_333333"

                    android:textSize="14sp"
                    />


                <TextView

                    android:id="@+id/item_apple_list_tv_apple_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toRightOf="@+id/item_apple_list_iv_icon"
                    android:maxLines="1"
                    android:text="2222"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="12sp"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/item_apple_list_tv_apple_pay"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/ff7462_fillet_ff7462_style"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="12222"
                android:layout_margin="12dp"
                android:textColor="@color/color_fffffff_b2b2b2_style"
                android:textSize="14sp"

                />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_eeeeee"></View>

    </LinearLayout>


</RelativeLayout>
