<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <View
        android:id="@+id/activity_item_cut"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_00000000" />

    <LinearLayout
        android:id="@+id/activity_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_status_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:text="报名成功"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee" />

        <TextView
            android:id="@+id/activity_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="去爬山"
            android:textColor="@color/color_666666"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="报名成功"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/activity_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="报名成功"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/activity_overtime_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="报名成功"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_b2b2b2"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_picture_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/header_icon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
