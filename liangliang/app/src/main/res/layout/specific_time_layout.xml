<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/corners_white_style"
    android:paddingBottom="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/DaysMonth"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/corners_ff7462_top_style"
        android:gravity="center"
        android:text="2016年3月"
        android:textColor="@color/color_ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_cad7d7"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="日"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="一"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="二"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="三"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="四"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="五"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="六"
            android:textColor="@color/color_9a9a9a"
            android:textSize="14sp" />

    </LinearLayout>


    <cn.chono.yopper.view.MyGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="1px"
        android:horizontalSpacing="1px"
        android:background="@color/color_eeeeee"
        android:numColumns="7">


    </cn.chono.yopper.view.MyGridView>


</LinearLayout>
