<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/order_pay_success_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_apple" />

    <TextView
        android:id="@+id/order_pay_success_p_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="@color/color_666666"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="35dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/order_pay_success_game_sure_tv"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.8"
            android:background="@drawable/ff7462_bg_10_corners"
            android:gravity="center"
            android:text="@string/i_know_text"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

    </LinearLayout>


</LinearLayout>