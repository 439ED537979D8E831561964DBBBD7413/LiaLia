<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/color_f8f8f7"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/color_f8f8f7"

        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:text="@string/feedback_hint"
            android:textColor="@color/color_b2b2b2"
            android:textSize="14sp"
            />

        <RadioGroup
            android:id="@+id/userOrderFeedback_rg_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:padding="13dp"
            >


        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:text="@string/feedback_descriptions"
            android:textColor="@color/color_b2b2b2"
            android:textSize="14sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="13dp">


            <EditText

                android:id="@+id/userOrderFeedback_et_feedback"

                android:layout_width="match_parent"
                android:layout_height="193dp"
                android:background="@null"
                android:gravity="left|top"

                android:hint="@string/evaluation_et_hint"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_b2b2b2"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/userOrderFeedback_et_et_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"

                android:text="0/200"
                android:textColor="@color/color_b2b2b2"
                android:textSize="10sp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:text="@string/photo_description"
            android:textColor="@color/color_b2b2b2"
            android:textSize="14sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:padding="13dp"


            >

            <cn.chono.yopper.view.vewgroup.YPGridView
                android:id="@+id/userOrderFeedback_gv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="5"
                android:horizontalSpacing="4dp"
                android:scrollbars="none"></cn.chono.yopper.view.vewgroup.YPGridView>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
