<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/item_tarot_astrology_label_rbar"
                style="@style/score_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3" />

            <TextView

                android:id="@+id/item_tarot_astrology_label_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_ff7462"

                android:textSize="10sp"

                />


        </LinearLayout>


        <cn.chono.yopper.view.FlowLeftLayout
            android:id="@+id/item_tarot_astrology_label_fll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

        </cn.chono.yopper.view.FlowLeftLayout>


    </LinearLayout>

</LinearLayout>
