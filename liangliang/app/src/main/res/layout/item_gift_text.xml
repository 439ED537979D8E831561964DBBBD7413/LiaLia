<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chat_item_charm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat_item_charmbg"
        android:drawableLeft="@drawable/chat_charm_icon"
        android:drawablePadding="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="+17"
        android:textColor="@color/color_ffffff"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/chat_item_gift_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/chat_item_charm_tv"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/chat_item_pcount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_item_gift_iv"
        android:layout_centerHorizontal="true"
        android:drawablePadding="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="1000个苹果"
        android:textColor="@color/color_666666"
        android:textSize="10sp" />
</RelativeLayout>
