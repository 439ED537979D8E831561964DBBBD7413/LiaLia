<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="排序"
        android:textColor="@color/color_b2b2b2"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dating_filter_sort_new_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新发布"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_eeeeee" />

        <TextView
            android:id="@+id/dating_filter_sort_date_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="近期约会"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_eeeeee" />

        <TextView
            android:id="@+id/dating_filter_sort_distance_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="离我最近"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="约会"
        android:textColor="@color/color_b2b2b2"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="性别"
                android:textColor="@color/color_5e5e5e"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/dating_filter_sex_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/dating_filter_sex_man_radiobutton"
                    style="@style/appoint_radioButton_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/dating_filter_sex_women_radiobutton"
                    style="@style/appoint_radioButton_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/dating_filter_sex_nolimit_radiobutton"
                    style="@style/appoint_radioButton_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textSize="15sp" />

            </RadioGroup>

        </RelativeLayout>

        <View
            android:id="@+id/dating_filter_area_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:background="@color/color_eeeeee" />

        <RelativeLayout
            android:id="@+id/dating_filter_area_layout"
            android:layout_width="match_parent"
            android:layout_height="45dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="地区"
                android:textColor="@color/color_5e5e5e"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/dating_filter_area_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/dating_filter_area_all_radiobutton"
                    style="@style/appoint_radioButton_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全国"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/dating_filter_area_city_radiobutton"
                    style="@style/appoint_radioButton_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同城"
                    android:textSize="15sp" />

            </RadioGroup>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>