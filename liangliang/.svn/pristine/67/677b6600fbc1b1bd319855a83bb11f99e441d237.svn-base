<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/discover_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_white" >

        <TextView
            android:id="@+id/discover_fragment_filter_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text=""
            android:drawableLeft="@drawable/filter_icon"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <cn.chono.yopper.view.TabFragmentIndicator
            android:id="@+id/discover_tabFragmentIndicator"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/text_color_white"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/discover_fragment_bubbling_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bubbling_icon"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/discover_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" >
    </android.support.v4.view.ViewPager>

</LinearLayout>