<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122px"
    android:background="@drawable/dating_rectangle_filter_shape"
    android:orientation="vertical">

    <TextView
        style="@style/appoint_radioButton_name_style"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textColor="#5e5e5e"
        android:text="费用" />

    <RadioGroup
        android:id="@+id/appoint_money_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/money_my_radiobutton"
            style="@style/appoint_radioButton_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="我请客" />

        <RadioButton
            android:id="@+id/money_aa_radiobutton"
            style="@style/appoint_radioButton_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="AA" />

        <RadioButton
            android:id="@+id/money_you_radiobutton"
            style="@style/appoint_radioButton_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="对方付费"

            />
    </RadioGroup>

</RelativeLayout>