<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/score_layout_round"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/score_layout_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/score_layout_head_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/showIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/appoint_item_bg"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/score_image_ablum_bg"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score_ablum_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"/>
            <TextView
                android:id="@+id/score_layout_attraction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_margin="2dp"
                android:textColor="@color/text_color_white"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/score_layout_level_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/score_layout_level_layout_bg"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/score_layout_level_clown_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score_clown_icon" />


            <ImageView
                android:id="@+id/score_layout_level_general_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score_general_icon" />


            <ImageView
                android:id="@+id/score_layout_level_handsome_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score_handsome_icon" />


            <ImageView
                android:id="@+id/score_layout_level_very_handsome_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/score_very_handsome_icon_selected" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/score_layout_photo_album_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/score_layout_photo_album_one_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/score_layout_photo_album_two_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/score_layout_photo_album_three_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_cord_layout_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"

            android:lines="1"

            android:text="我的名字哦你"
            android:textColor="@color/text_color_000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/score_cord_layout_constellation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/score_cord_layout_user_name_tv"
            android:lines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="双鱼"
            android:textColor="@color/text_color_white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/score_cord_layout_age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="25岁"
            android:textColor="@color/text_color_999999"
            android:textSize="16sp" />


    </RelativeLayout>


</LinearLayout>