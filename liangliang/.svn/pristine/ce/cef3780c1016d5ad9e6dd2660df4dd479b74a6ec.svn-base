<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_eeeeee">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44px"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout

            android:layout_width="match_parent"
            android:layout_height="276px">

            <ImageView
                android:id="@+id/usre_icon_iv"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user_herd_img_bg"
                app:layout_auto_baseheight="height|padding"
                app:layout_auto_basewidth="width|padding" />


        </com.zhy.autolayout.AutoRelativeLayout>


        <EditText
            android:id="@+id/register_nickname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/text_color_white"

            android:hint="@string/nickname_hine"


            android:paddingBottom="32px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="32px"
            android:singleLine="true"
            android:textColor="@color/text_color_333333"
            android:textColorHint="@color/text_color_b2b2b2"
            android:textSize="32px" />

        <TextView
            android:id="@+id/register_vconstellation_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:background="@color/text_color_white"
            android:gravity="center_vertical"
            android:hint="@string/constellation"
            android:maxLength="11"
            android:paddingBottom="32px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="32px"
            android:singleLine="true"
            android:textColor="@color/text_color_333333"
            android:textColorHint="@color/text_color_b2b2b2"
            android:textSize="32px" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:background="@color/text_color_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/sex_male_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sex_male_icon_iv"
                    android:layout_width="34px"
                    android:layout_height="34px"
                    android:src="@drawable/sex_female_icon_normal"
                    app:layout_auto_baseheight="height|padding"
                    app:layout_auto_basewidth="width|padding" />

                <TextView
                    android:id="@+id/sex_male_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="32px"
                    android:text="男"
                    android:textColor="@color/text_color_b2b2b2"
                    android:textSize="32px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/text_color_eeeeee" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/sex_female_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sex_female_icon_iv"
                    android:layout_width="34px"
                    android:layout_height="34px"
                    android:src="@drawable/sex_female_icon_normal"
                    app:layout_auto_baseheight="height|padding"
                    app:layout_auto_basewidth="width|padding" />

                <TextView
                    android:id="@+id/sex_female_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="32px"
                    android:text="女"
                    android:textColor="@color/text_color_b2b2b2"
                    android:textSize="32px" />


            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>


        <Button
            android:id="@+id/register_write_info_next_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_marginTop="60px"
            android:background="@drawable/corners_orange_selected_style"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/register_write_info_next"
            android:textColor="@drawable/font_selected_style_ffffff"
            android:textSize="32px" />


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>