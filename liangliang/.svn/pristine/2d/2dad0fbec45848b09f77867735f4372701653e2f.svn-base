<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/appoint_dog_release_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/appoint_address_layout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                ></include>

            <include
                layout="@layout/appoint_date_layout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="6dp"></include>

            <include
                layout="@layout/appoint_time_layout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="6dp"></include>

            <include
                layout="@layout/appoint_sex_layout"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="6dp"></include>

            <RadioButton
                android:id="@+id/publish_dog_video_ratiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/evaluation_style"
                android:drawablePadding="6dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:tag="false"
                android:text="要求对方通过视频认证"
                android:textColor="@color/text_color_b2b2b2"
                android:textSize="13sp"
                />


            <ImageView
                android:id="@+id/appoint_dog_release_img_iv"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/release_dog_add_icon"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/appoint_dog_release_add_img_hint_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="添加一张爱犬的照片吧"
                android:textColor="@color/text_color_b2b2b2"
                android:textSize="14sp" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/appoint_dog_release_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/publish_btn_bg"
        android:gravity="center"
        android:text="发布"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text_color_ff7462"
        android:textSize="16sp" />

</RelativeLayout>