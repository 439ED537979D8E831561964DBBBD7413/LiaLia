<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_no_message_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/error_no_message_img"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginTop="250px"
        android:src="@drawable/message_no_data_bg"
        app:layout_auto_baseheight="width" />

    <TextView
        android:id="@+id/error_no_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:text="暂时没有新消息"
        android:textColor="@color/text_color_999999"
        android:textSize="32px" />

</com.zhy.autolayout.AutoLinearLayout>