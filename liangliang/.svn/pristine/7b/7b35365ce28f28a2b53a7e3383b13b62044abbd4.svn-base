<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/daily_score_layout_context_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/publish_appoint_bg"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/text_color_white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/daily_score_cancel_tv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"

                android:src="@drawable/dailly_score_layout_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="颜值打分"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="丑哥？帅哥？等你来打分!"
                android:textColor="#bfbfbf"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/daily_score_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/daily_score_layout_round"
                    android:padding="5dp">


                    <ImageView
                        android:id="@+id/daily_score_user_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:id="@+id/daily_score_user_icon_showIcon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:background="@drawable/appoint_item_bg"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/daily_score_laout_dialog_score_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/daily_score_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-25dp"
                    android:src="@drawable/dailly_score_layout_icon" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/daily_score_layout_go_tv"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/corners_orange_selected_style"
            android:gravity="center"
            android:text="去打分"
            android:textColor="@drawable/font_selected_style_ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/daily_score_laout_dialog_lift_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/dailly_score_layout_girl_privilege_icon" />


</RelativeLayout>