<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="49dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/appoint_detail_movice_img_iv"
            android:layout_width="49dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:layout_width="49dp"
            android:layout_height="65dp"
            android:background="@drawable/image_shape_bg"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/appoint_item_movice_icon"/>


            <TextView
                android:id="@+id/appoint_detail_movice_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textColor="@color/text_color_ff7462"
                android:textSize="16sp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:background="@drawable/appoint_item_address_icon"/>


            <TextView
                android:id="@+id/appoint_detail_movice_cianme_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_black"
                android:layout_marginLeft="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:visibility="invisible"
                />

        <TextView
            android:id="@+id/appoint_detail_movice_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLength="8"
            android:text="大学路52号502"
            android:textSize="12sp"
            android:textColor="@color/text_color_959492" />

            <TextView
                android:id="@+id/appoint_detail_movice_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:singleLine="true"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/text_color_959492" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>