<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dating_rectangle_filter_shape"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/appoint_movement_radio_group_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/run_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:text="跑步" />

            <RadioButton
                android:id="@+id/badminton_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="羽毛球" />

            <RadioButton
                android:id="@+id/tennis_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:textSize="15sp"
                android:text="网球"
                />

        </RelativeLayout>


    </RadioGroup>

    <RadioGroup
        android:id="@+id/appoint_movement_radio_group_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appoint_movement_radio_group_one"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/swim_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:text="游泳" />

            <RadioButton
                android:id="@+id/bowling_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="保龄球" />

            <RadioButton
                android:id="@+id/snooker_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:text="桌球"
                />
        </RelativeLayout>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/appoint_movement_radio_group_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appoint_movement_radio_group_two"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/ping_pong_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:text="乒乓球" />

            <RadioButton
                android:id="@+id/yoga_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:text="瑜伽" />

            <RadioButton
                android:id="@+id/golf_radiobutton"
                style="@style/appoint_movement_radioButton_style"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="高尔夫"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </RadioGroup>

</RelativeLayout>