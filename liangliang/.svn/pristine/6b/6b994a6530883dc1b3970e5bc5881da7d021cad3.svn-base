<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical"
       >

        <ImageView
            android:id="@+id/appoint_detail_shop_img_iv"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:scaleType="fitXY"
            />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/image_shape_bg"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/appoint_detail_shop_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/appoint_detail_shop_one_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/score_star" />

            <ImageView
                android:id="@+id/appoint_detail_shop_two_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/score_star" />

            <ImageView
                android:id="@+id/appoint_detail_shop_three_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/score_star" />

            <ImageView
                android:id="@+id/appoint_detail_shop_four_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/score_star" />

            <ImageView
                android:id="@+id/appoint_detail_shop_five_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/score_star" />

            <TextView
                android:id="@+id/appoint_detail_shop_people_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_ff7462"
                android:layout_marginLeft="20dp"
                android:text="200/人"
                android:textSize="14sp"/>

        </LinearLayout>



        <TextView
            android:id="@+id/appoint_detail_shop_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="6"
            android:text="大学路52号502"
            android:textSize="14sp"
            android:textColor="@color/text_color_959492" />

        <TextView
            android:id="@+id/appoint_detail_shop_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/appoint_detail_shop_address_tv"
            android:text="0.5km"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/text_color_959492" />

    </RelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/appoint_detail_right_icon"/>

</LinearLayout>