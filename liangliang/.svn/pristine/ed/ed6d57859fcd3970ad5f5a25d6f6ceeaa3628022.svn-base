<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_center_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/user_center_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_big_bg"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_center_layout_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:src="@drawable/user_center_setting_icon"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/user_center_name_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="10"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:text="我的"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/user_center_setting_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:src="@drawable/user_center_setting_icon"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/user_center_head_img_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" >

            <ImageView
                android:id="@+id/user_center_head_img_iv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/white_circle_bg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/user_center_bump_num_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_center_bump_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/text_color_white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_marginTop="-4dp"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="魅力"
                    android:textColor="@color/text_color_white"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/text_color_white" />

            <RelativeLayout
                android:id="@+id/user_center_look_num_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_center_look_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/text_color_white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_center_look_num_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-4dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="谁看过我"
                    android:textColor="@color/text_color_white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_center_add_look_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-0dip"
                    android:layout_toRightOf="@+id/user_center_look_num_tv"
                    android:background="@drawable/center_messaga_num_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/text_color_white"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/user_center_hint_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_color_white"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/user_center_hint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_center_complete_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_center_tan_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user_center_tan_icon" />

            <TextView
                android:id="@+id/user_center_done_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/user_center_tan_icon"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="个人资料0%未完善"
                android:textColor="@color/text_color_white"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_center_done_hint_tv"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/user_center_tan_icon"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="展示真实的自我,遇到懂你的ta"
                android:textColor="@color/text_color_white"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/user_center_right_icon" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/user_center_userinfo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_center_info_icon" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/user_center_video"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/user_center_video_iv"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/user_center_video_icon" />

                    <ImageView
                        android:id="@+id/user_center_video_lookme_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_bubble"
                        android:gravity="center"
                        android:visibility="visible" />
                </FrameLayout>

                <TextView
                    android:id="@+id/user_center_video_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未认证"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/user_center_video_iv"
                    android:textSize="10sp"
                    android:background="@drawable/usercenter_video_state_tv_bg"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_center_appointment"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_center_dating_icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="0dp" >

            <LinearLayout
                android:id="@+id/user_center_bubble"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_center_bubble_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_center_P_guo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_center_p_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_center_score"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_center_score_icon" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>