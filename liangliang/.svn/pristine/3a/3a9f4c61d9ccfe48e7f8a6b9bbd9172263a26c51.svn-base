<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:background="@drawable/message_list_view_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="83dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/video_item_img_iv"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:background="@drawable/message_head_default_icon"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" >

                <TextView
                    android:id="@+id/video_item_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="adada"
                    android:textColor="@color/text_color_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/video_item_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:singleLine="true"
                    android:text="adada"
                    android:textSize="14sp"
                    android:textColor="@color/text_color_light_grey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/video_item_horoscope_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/look_video_man_icon"
                    android:background="@drawable/look_video_man_bg"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="9sp"
                    android:text="处女"
                    android:paddingLeft="5dp"
                    android:drawablePadding="3dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/text_color_white" />

                <ImageView
                    android:id="@+id/video_item_isVideoVerified_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/has_video_icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="81dp"
        android:background="#e2e2e2" />

</LinearLayout>